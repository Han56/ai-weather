/* pages/privacy/privacy.wxss */
.container {
  height: 100vh;
  background: #f5f5f7;
  padding: 20rpx;
  box-sizing: border-box;
}

.privacy-content {
  background: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.section {
  margin-bottom: 40rpx;
}

.section:last-child {
  margin-bottom: 0;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 20rpx;
}

.list {
  padding-left: 20rpx;
}

.item {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 10rpx;
}

.contact {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-top: 10rpx;
  padding: 20rpx;
  background: #f8f8f8;
  border-radius: 10rpx;
}