/* 页面容器 */
.page-container {
  background-color: #f5f7fa;
  min-height: 100vh;
  padding: 0; /* 移除padding */
  margin-right: 30rpx; /* 确保没有margin */
  box-sizing: border-box;
}

/* 顶部图片区域 - 9:16比例 */
.image-container {
  position: relative;
  width: 100%;
  padding-top: 60%; /* 从177.78%大幅减小到60% */
  overflow: hidden;
  margin: 0; /* 确保没有margin */
}

.outfit-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: #f0f0f0;
}

.ai-badge {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  background-color: rgba(255, 255, 255, 0.9);
  border-radius: 30rpx;
  padding: 8rpx 20rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.ai-badge .ai-icon {
  margin-right: 6rpx;
  font-size: 24rpx;
}

.ai-badge text {
  font-size: 24rpx;
  color: #333;
  font-weight: 500;
}

/* 今日穿衣推荐卡片 */
.recommendation-card {
  margin: 20rpx 20rpx 30rpx 20rpx; /* 减小左右margin */
  background-color: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.header-title {
  display: flex;
  align-items: center;
}

.header-title .icon {
  color: #a29bfe;
  margin-right: 10rpx;
  font-size: 32rpx;
}

.header-title .title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.ai-tag {
  background-color: #f3f0ff;
  color: #6c5ce7;
  font-size: 22rpx;
  padding: 6rpx 16rpx;
  border-radius: 12rpx;
  font-weight: 500;
}

.recommendation-content {
  margin-bottom: 30rpx;
}

.recommendation-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}

.tags-container {
  display: flex;
  gap: 20rpx;
}

.tag {
  background-color: #f5f5f5;
  color: #666;
  font-size: 24rpx;
  padding: 10rpx 24rpx;
  border-radius: 30rpx;
}

/* 用户画像设置 */
.profile-card {
  margin: 20rpx 20rpx 30rpx 20rpx; /* 减小左右margin */
  background: linear-gradient(135deg, #a29bfe 0%, #fd79a8 100%);
  border-radius: 20rpx;
  padding: 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: white;
}

.profile-left {
  display: flex;
  align-items: center;
}

.profile-icon {
  width: 80rpx;
  height: 80rpx;
  background-color: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.profile-icon .icon {
  font-size: 40rpx;
}

.profile-text {
  display: flex;
  flex-direction: column;
}

.profile-title {
  font-size: 32rpx;
  font-weight: 500;
  margin-bottom: 6rpx;
}

.profile-desc {
  font-size: 24rpx;
  opacity: 0.8;
}

.profile-button {
  background-color: white;
  color: #a29bfe;
  padding: 12rpx 30rpx;
  border-radius: 30rpx;
  font-size: 26rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
}

.profile-button .arrow {
  margin-left: 6rpx;
  font-size: 30rpx;
}

.profile-tags {
  margin: 0 20rpx 30rpx 20rpx; /* 减小左右margin */
  display: flex;
  gap: 20rpx;
}

.profile-tag {
  display: flex;
  align-items: center;
  background-color: rgba(255, 255, 255, 0.8);
  padding: 10rpx 20rpx;
  border-radius: 30rpx;
  font-size: 24rpx;
  color: #666;
}

.tag-icon {
  margin-right: 8rpx;
  font-size: 24rpx;
}

/* 生活指数部分 */
.life-index-section {
  margin: 20rpx 20rpx 30rpx 20rpx; /* 减小左右margin */
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
  display: block;
}

.life-index-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 15rpx;
  background: white;
  border-radius: 20rpx;
  padding: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.grid-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 10rpx;
  text-align: center;
}

.grid-icon {
  font-size: 36rpx;
  margin-bottom: 12rpx;
}

.grid-label {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.grid-tag {
  padding: 6rpx 12rpx;
  border-radius: 12rpx;
  font-size: 20rpx;
  font-weight: 500;
  color: white;
  min-width: 60rpx;
  text-align: center;
}

/* 不同颜色的标签 */
.grid-tag.yellow {
  background-color: #ffd93d;
  color: #8b6914;
}

.grid-tag.blue {
  background-color: #74b9ff;
  color: white;
}

.grid-tag.green {
  background-color: #00b894;
  color: white;
}

.grid-tag.orange {
  background-color: #fd79a8;
  color: white;
}

.grid-tag.purple {
  background-color: #a29bfe;
  color: white;
}

/* 底部链接 */
.footer-links {
  margin: 20rpx 20rpx 40rpx 20rpx; /* 减小左右margin */
}

.footer-link {
  display: flex;
  align-items: center;
  padding: 30rpx 20rpx;
  border-bottom: 1rpx solid #eee;
  color: #666;
  font-size: 28rpx;
}

.footer-link:last-child {
  border-bottom: none;
}

.link-icon {
  margin-right: 20rpx;
}

.link-arrow {
  margin-left: auto;
  font-size: 36rpx;
  color: #ccc;
}

.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  text-align: center;
  margin-bottom: 30rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
  margin-top: 10rpx;
}

.content {
  margin-bottom: 30rpx;
}

.advice-card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.advice-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.advice-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  white-space: pre-wrap;
}

.live-index-card {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.index-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.index-item {
  padding: 20rpx;
  background-color: #f8f8f8;
  border-radius: 12rpx;
}

.index-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.index-status {
  font-size: 26rpx;
  color: #007AFF;
  margin-bottom: 10rpx;
}

.index-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.4;
}

.footer {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.contact-btn, .privacy-btn, .portrait-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  border-radius: 44rpx;
  font-size: 30rpx;
  margin: 0;
}

.contact-btn {
  background-color: #007AFF;
  color: #fff;
}

.privacy-btn {
  background-color: #f8f8f8;
  color: #333;
}

.portrait-btn {
  background-color: #f8f8f8;
  color: #333;
}

.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  background: #fff;
}

.loading-spinner {
  width: 40px;
  height: 40px;
  border: 4px solid #f3f3f3;
  border-top: 4px solid #3498db;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20px;
}

.loading-text {
  color: #666;
  font-size: 14px;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}
