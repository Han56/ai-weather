.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: linear-gradient(180deg, #f5f5f7 0%, #e3e3e8 100%);
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, sans-serif;
  padding: 0;
  box-sizing: border-box;
  color: #1d1d1f;
}

/* ‰∏äÂçäÈÉ®ÂàÜÔºöÂΩìÂâçÂ§©Ê∞î‰ø°ÊÅØ */
.current-weather {
  padding: 20px;
  background: rgba(255, 255, 255, 0.8);
  border-radius: 20px;
  margin: 12px;
  box-shadow: 0 8px 20px rgba(0, 0, 0, 0.05);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
}

.location-container {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 20px;
}

.location {
  font-size: 18px;
  font-weight: 600;
}

.location-arrow {
  font-size: 12px;
  margin-left: 5px;
  color: #8e8e93;
}

.main-info {
  display: flex;
  justify-content: space-between;
  margin-bottom: 20px;
}

.temperature-container {
  display: flex;
  flex-direction: column;
}

.current-temp {
  font-size: 48px;
  font-weight: 300;
  line-height: 1;
}

.temp-description {
  font-size: 16px;
  color: #8e8e93;
  margin-top: 5px;
}

.extra-info {
  display: flex;
  gap: 15px;
}

.extra-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: rgba(0, 0, 0, 0.03);
  padding: 10px 15px;
  border-radius: 12px;
}

.extra-label {
  font-size: 12px;
  color: #8e8e93;
  margin-bottom: 5px;
}

.extra-value {
  font-size: 14px;
  font-weight: 500;
}

.weather-details {
  background: rgba(240, 240, 240, 0.8);
  border-radius: 12px;
  padding: 15px;
  margin-bottom: 20px;
}

.detail-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 12px;
}

.detail-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.sun-time {
  grid-column: span 1.5;
}

.detail-label {
  font-size: 12px;
  color: #636366;
  margin-bottom: 4px;
}

.detail-value {
  font-size: 15px;
  font-weight: 500;
  color: #1d1d1f;
}

.temperature-graph {
  margin-top: 15px;
}

.graph-title {
  font-size: 15px;
  font-weight: 600;
  margin-bottom: 10px;
}

.graph-container {
  height: 150px;
  width: 100%;
  background: rgba(0, 0, 0, 0.03);
  border-radius: 12px;
  overflow: hidden;
}

.graph-placeholder {
  width: 100%;
  height: 100%;
}

/* ‰∏ãÂçäÈÉ®ÂàÜÔºö10Êó•Â§©Ê∞îÈ¢ÑÊä• */
.forecast-container {
  background: rgba(120, 172, 196, 0.85);
  border-radius: 20px;
  margin: 0 12px 12px;
  padding: 15px;
  box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  color: white;
}

.forecast-header {
  display: flex;
  align-items: center;
  margin-bottom: 15px;
}

.forecast-icon {
  margin-right: 10px;
}

.icon-calendar::before {
  content: "üìÖ";
}

.forecast-title {
  font-size: 18px;
  font-weight: 600;
}

.forecast-list {
  display: flex;
  flex-direction: column;
}

.forecast-item {
  display: flex;
  align-items: center;
  padding: 18px 0;
  border-bottom: 1px solid rgba(255, 255, 255, 0.2);
}

.forecast-item:last-child {
  border-bottom: none;
}

.day {
  width: 60px;
  font-size: 17px;
  font-weight: 600;
}

.weather-icon {
  width: 50px;
  height: 50px;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}

.icon-cloudy::before {
  content: "‚òÅÔ∏è";
  font-size: 24px;
}

.icon-rainy::before {
  content: "üåßÔ∏è";
  font-size: 24px;
}

.icon-partly-cloudy::before {
  content: "‚õÖ";
  font-size: 24px;
}

.icon-thunderstorm::before {
  content: "‚ö°";
  font-size: 24px;
}

.rain-chance {
  position: absolute;
  bottom: 0;
  font-size: 12px;
  color: #7fdbff;
}

.low-temp {
  width: 40px;
  text-align: right;
  font-size: 19px;
  color: rgba(255, 255, 255, 0.9);
  font-weight: 500;
}

.high-temp {
  width: 40px;
  text-align: left;
  font-size: 19px;
  font-weight: 600;
}

.temp-range {
  flex: 1;
  padding: 0 15px;
}

.range-bar {
  height: 4px;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 2px;
  position: relative;
}

.range-fill {
  position: absolute;
  height: 4px;
  background: #7fdbff;
  border-radius: 2px;
}

.yellow-fill {
  background: #ffcc00;
}

.range-dot {
  position: absolute;
  width: 8px;
  height: 8px;
  background: white;
  border-radius: 50%;
  top: -2px;
  transform: translateX(-4px);
}

