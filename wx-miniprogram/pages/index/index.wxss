/* 全局样式 */
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background: linear-gradient(180deg, #f5f5f7 0%, #e3e3e8 100%);
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, sans-serif;
  padding: 0;
  box-sizing: border-box;
  color: #1d1d1f;
}

.temp-description {
  font-size: 12px;
  color: #8e8e93;
  margin-top: 5px;
}

.extra-info {
  display: flex;
  gap: 15px;
}

.extra-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: rgba(0, 0, 0, 0.03);
  padding: 10px 15px;
  border-radius: 12px;
}

.extra-label {
  font-size: 12px;
  color: #8e8e93;
  margin-bottom: 5px;
}

.extra-value {
  font-size: 14px;
  font-weight: 500;
}

.weather-details {
  background: rgba(240, 240, 240, 0.8);
  border-radius: 12px;
  padding: 15px;
  margin-bottom: 20px;
}

.detail-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.detail-item {
  width: 30%; /* 每个子元素占 30% 的宽度 */
  margin-bottom: 12px; /* 模拟行间距 */
  display: flex;
  flex-direction: column;
  align-items: center;
}

.sun-time {
  grid-column: span 1.5;
}

.detail-label {
  font-size: 12px;
  color: #636366;
  margin-bottom: 4px;
}

.detail-value {
  font-size: 15px;
  font-weight: 500;
  color: #1d1d1f;
}

.temperature-graph {
  margin-top: 15px;
}

.graph-title {
  font-size: 15px;
  font-weight: 600;
  margin-bottom: 10px;
}

.graph-container {
  height: 150px;
  width: 100%;
  background: rgba(0, 0, 0, 0.03);
  border-radius: 12px;
  overflow: hidden;
}

.graph-placeholder {
  width: 100%;
  height: 100%;
}

/* 下半部分：10日天气预报 */
.forecast-container {
  background: linear-gradient(135deg, #e3f2fd 0%, #bbdefb 100%);
  border-radius: 20px;
  margin: 0 12px 12px;
  padding: 15px;
  box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  color: #2c3e50;
}

.forecast-header {
  display: flex;
  align-items: center;
  margin-bottom: 15px;
}

.forecast-icon {
  margin-right: 10px;
}

.icon-calendar::before {
  content: "📅";
}

.forecast-title {
  font-size: 18px;
  font-weight: 600;
}

.forecast-list {
  display: flex;
  flex-direction: column;
}

.forecast-item {
  display: flex;
  align-items: center;
  padding: 18px 0;
  border-bottom: 1px solid rgba(255, 255, 255, 0.2);
  position: relative;
  gap: 10px;
}

.forecast-item:last-child {
  border-bottom: none;
}

.day {
  width: 50px;
  font-size: 17px;
  font-weight: 600;
  flex-shrink: 0;
}

.date {
  width: 45px;
  font-size: 14px;
  color: #2c3e50;
  text-align: center;
  flex-shrink: 0;
}

.weather-condition {
  width: 50px;
  font-size: 15px;
  color: #2c3e50;
  text-align: center;
  flex-shrink: 0;
}

.weather-icon {
  width: 45px;
  height: 45px;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
  flex-shrink: 0;
}

.icon-cloudy::before {
  content: "☁️";
  font-size: 24px;
}

.icon-sunny::before {
  content: "☀️";
  font-size: 24px;
}

.icon-partly-cloudy::before {
  content: "⛅";
  font-size: 24px;
}

/* 雨相关图标 */
.icon-light-rain::before {
  content: "🌦️";
  font-size: 24px;
}

.icon-moderate-rain::before {
  content: "🌧️";
  font-size: 24px;
}

.icon-heavy-rain::before {
  content: "🌧️";
  font-size: 24px;
  filter: brightness(0.8);
}

.icon-storm-rain::before {
  content: "⛈️";
  font-size: 24px;
}

/* 雪相关图标 */
.icon-light-snow::before {
  content: "🌨️";
  font-size: 24px;
}

.icon-moderate-snow::before {
  content: "🌨️";
  font-size: 24px;
  filter: brightness(0.9);
}

.icon-heavy-snow::before {
  content: "🌨️";
  font-size: 24px;
  filter: brightness(0.8);
}

/* 雾和霾 */
.icon-fog::before {
  content: "🌫️";
  font-size: 24px;
}

.icon-haze::before {
  content: "😷";
  font-size: 24px;
}

.icon-thunderstorm::before {
  content: "⛈️";
  font-size: 24px;
}

.temp-container {
  display: flex;
  align-items: center;
  flex-shrink: 0;
  margin-left: auto;
  margin-right: 80px;
}

.low-temp {
  width: 40px;
  text-align: right;
  font-size: 19px;
  color: #2c3e50;
  font-weight: 500;
  margin-right: 5px;
}

.temp-separator {
  font-size: 19px;
  color: #2c3e50;
  margin: 0 5px;
}

.high-temp {
  width: 40px;
  text-align: left;
  font-size: 19px;
  font-weight: 600;
  margin-left: 5px;
}

.wind-info {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  flex-shrink: 0;
  width: 70px;
}

.wind-dir {
  font-size: 12px;
  color: #2c3e50;
  white-space: nowrap;
  line-height: 1.2;
}

.wind-level {
  font-size: 12px;
  color: #2c3e50;
  margin-top: 2px;
  white-space: nowrap;
  line-height: 1.2;
}

.temp-range {
  flex: 1;
  padding: 0 15px;
}

.range-bar {
  height: 4px;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 2px;
  position: relative;
}

.range-fill {
  position: absolute;
  height: 4px;
  background: #7fdbff;
  border-radius: 2px;
}

.yellow-fill {
  background: #ffcc00;
}

.range-dot {
  position: absolute;
  width: 8px;
  height: 8px;
  background: white;
  border-radius: 50%;
  top: -2px;
  transform: translateX(-4px);
}

/* 确保滚动视图正常工作 */
page {
  height: 100%;
  overflow: hidden;
}

/* 修改主容器样式 - 浅色彩色背景 */
.weather-container {
  padding: 20rpx;
  background: linear-gradient(135deg, #e3f2fd 0%, #bbdefb 100%);
  min-height: auto;
  color: #2c3e50;
  border-radius: 30rpx;
  margin: 30rpx;
  box-shadow: 0 8rpx 30rpx rgba(0, 0, 0, 0.1);
}

/* 减小头部间距 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.title {
  font-size: 32rpx;
  font-weight: 500;
  color: #2c3e50;
}

.location {
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #2c3e50;
}

.arrow {
  margin-left: 10rpx;
  font-size: 20rpx;
}

/* 减小主要天气信息间距 */
.main-weather {
  margin-bottom: 20rpx;
}

/* 减小温度部分间距 */
.temperature-section {
  margin-bottom: 15rpx;
}

/* 调整温度字体大小 */
.temperature {
  font-size: 100rpx;
  font-weight: 300;
  line-height: 1;
  color: #2c3e50;
}

/* 减小天气描述间距 */
.weather-desc {
  margin-top: 5rpx;
}

.weather-desc text {
  font-size: 28rpx;
  opacity: 0.8;
  color: #2c3e50;
}

/* 减小预警和体感温度部分的内边距 */
.alert-section {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: rgba(255, 255, 255, 0.6);
  border-radius: 16rpx;
  padding: 12rpx 20rpx;
  backdrop-filter: blur(10rpx);
}

.alert-item {
  display: flex;
  align-items: center;
}

.alert-label {
  background: #ff6b6b;
  color: white;
  padding: 8rpx 16rpx;
  border-radius: 12rpx;
  font-size: 24rpx;
  white-space: nowrap;
}

.feels-like-item {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.feels-like-label {
  font-size: 26rpx;
  opacity: 0.8;
  white-space: nowrap;
  color: #2c3e50;
}

.feels-like-temp {
  font-size: 32rpx;
  font-weight: 600;
  white-space: nowrap;
  color: #2c3e50;
}

/* 九宫格布局 */
.weather-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 15rpx;
  margin-top: 20rpx;
  background: white;
  border-radius: 20rpx;
  padding: 30rpx 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.grid-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 10rpx;
  text-align: center;
  min-height: 100rpx;
}

.grid-icon {
  font-size: 36rpx;
  margin-bottom: 12rpx;
}

.grid-label {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 12rpx;
  line-height: 1.2;
}

.grid-tag {
  font-size: 14px;
  padding: 4px 8px;
  border-radius: 6px;
  margin-top: 4px;
  white-space: pre-line;
  text-align: center;
}

/* 不同颜色的标签 */
.grid-tag.yellow {
  background-color: #ffd93d;
  color: #8b6914;
}

.grid-tag.blue {
  background-color: #74b9ff;
  color: white;
}

.grid-tag.green {
  background-color: #00b894;
  color: white;
}

.grid-tag.orange {
  background-color: #fd79a8;
  color: white;
}

.grid-tag.purple {
  background-color: #a29bfe;
  color: white;
}

/* 响应式调整 */
@media (max-width: 750rpx) {
  .weather-grid {
    grid-template-columns: repeat(2, 1fr);
  }
  
  .grid-item:nth-child(9) {
    grid-column: span 2;
  }

  /* 调整预报项在小屏幕上的布局 */
  .forecast-item {
    gap: 8px;
    padding: 15px 0;
  }

  .day {
    width: 40px;
    font-size: 15px;
  }

  .date {
    width: 40px;
    font-size: 12px;
  }

  .weather-condition {
    width: 45px;
    font-size: 13px;
  }

  .weather-icon {
    width: 40px;
    height: 40px;
  }

  .temp-container {
    margin-right: 60px;
  }

  .low-temp, .high-temp {
    width: 35px;
    font-size: 17px;
  }

  .wind-info {
    width: 60px;
  }

  .wind-dir, .wind-level {
    font-size: 11px;
  }
}

/* 加载动画样式 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100vh;
  background: #fff;
}

.loading-spinner {
  width: 40px;
  height: 40px;
  border: 4px solid #f3f3f3;
  border-top: 4px solid #3498db;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20px;
}

.loading-text {
  color: #666;
  font-size: 14px;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}