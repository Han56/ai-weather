/* components/location-compo/location-compo.wxss */
.location-component {
  padding: 16rpx 24rpx;
  font-family: -apple-system, BlinkMacSystemFont, "SF Pro Text", "Helvetica Neue";
}

.dropdown-icon {
  width: 20px;
  height: 20px;
}

.loading {
  text-align: center;
  padding: 20rpx;
  color: #8E8E93;
  font-size: 28rpx;
}

.auth-denied {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 32rpx;
  background: rgba(0, 0, 0, 0.02);
  border-radius: 16rpx;
}

.auth-text {
  font-size: 28rpx;
  color: #8E8E93;
  margin-bottom: 16rpx;
  text-align: center;
}

.auth-button {
  background: #007AFF;
  color: #FFFFFF;
  font-size: 32rpx;
  padding: 16rpx 32rpx;
  border-radius: 12rpx;
  border: none;
  font-weight: 500;
}

.location-info {
  padding: 24rpx 0;
  transition: background-color 0.2s;
}

.location-info:active {
  background-color: rgba(0, 0, 0, 0.05);
}

.location-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.location-text {
  font-size: 34rpx;
  color: #1C1C1E;
  font-weight: 400;
}

.chevron-icon {
  width: 32rpx;
  height: 32rpx;
  opacity: 0.3;
}

.no-location {
  text-align: center;
  padding: 20rpx;
  color: #8E8E93;
  font-size: 28rpx;
}